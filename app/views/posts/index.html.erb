<p id="notice"><%= notice %></p>

<h1 class="index-title">投稿一覧<%= link_to '新規投稿', new_post_path, class: 'new-form' %></h1>


<table class="posts-table">
  <thead>
    <tr>
      <th class="table-header">タイトル</th>
      <th class="table-header">本文</th>
      <th class="table-header">画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="table-contents--title"><%= post.title.truncate(20) %></td>
        <td class="table-contents"><%= post.content.truncate(200) %></td>
        <td class="table-image"><%= image_tag "#{post.image}", alt: 'No Image', size: '100x100' %></td>
        <td class="column-menu"><%= link_to '詳細確認', post %></td>
        <td class="column-menu"><%= link_to '編集', edit_post_path(post) %></td>
        <td class="column-menu"><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
